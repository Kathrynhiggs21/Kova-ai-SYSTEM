# Kova AI Common Environment Variables Template
# Copy this to .env and fill in your actual values

# API Keys (REQUIRED)
ANTHROPIC_API_KEY=sk-ant-your-key-here
OPENAI_API_KEY=sk-your-key-here
GITHUB_TOKEN=ghp_your-token-here
PINECONE_API_KEY=your-pinecone-key-here

# Database Configuration
POSTGRES_DB=kova
POSTGRES_USER=kova
POSTGRES_PASSWORD=change-this-password
DATABASE_URL=postgresql+asyncpg://kova:change-this-password@localhost:5432/kova

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=change-this-redis-password

# Application Settings
APP_NAME=Kova AI
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=generate-a-secure-random-key-here
JWT_SECRET_KEY=generate-another-secure-key-here
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# Multi-Repo Settings
GITHUB_OWNER=Kathrynhiggs21
SYNC_INTERVAL_MINUTES=30
AUTO_DISCOVER_REPOS=true

# Claude Settings
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=1.0

# External Services
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin

# Feature Flags
ENABLE_AUTO_FIX=true
ENABLE_CLAUDE_SYNC=true
ENABLE_WEBHOOKS=true
ENABLE_MULTI_REPO=true
