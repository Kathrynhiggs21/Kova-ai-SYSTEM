# Kova AI System - Environment Configuration
# Save this as: kova-ai/.env.example
# Copy to .env and fill in your actual values

# ================================================
# REQUIRED: AI API Keys
# ================================================
# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Get your Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ================================================
# REQUIRED: Integration Keys
# ================================================
# GitHub Personal Access Token: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your-github-token-here

# Pinecone API Key: https://www.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp-free
PINECONE_INDEX_NAME=kova-ai-index

# ================================================
# Optional: Google Cloud
# ================================================
# Path to Google service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-service-account.json
GOOGLE_CLOUD_PROJECT=your-project-id

# ================================================
# Optional: Other Integrations
# ================================================
# Canva API (if using Canva integration)
CANVA_API_KEY=your-canva-api-key-here

# Slack (if using Slack integration)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token

# ================================================
# Database Configuration
# ================================================
# PostgreSQL
POSTGRES_PASSWORD=kova_secure_pass_2024
POSTGRES_USER=kova_user
POSTGRES_DB=kova_db
DATABASE_URL=postgresql+asyncpg://kova_user:kova_secure_pass_2024@postgres:5432/kova_db

# Redis
REDIS_PASSWORD=redis_secure_pass_2024
REDIS_URL=redis://:redis_secure_pass_2024@redis:6379/0

# ================================================
# Security Configuration
# ================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-this-to-random-string
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Webhook Secrets (generate random strings)
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret-here
CANVA_WEBHOOK_SECRET=your-canva-webhook-secret-here

# ================================================
# Application Configuration
# ================================================
# Environment: development, staging, production
ENVIRONMENT=production

# App settings
APP_NAME="Kova AI System"
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_URL=http://localhost:8000
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ================================================
# Monitoring & Analytics
# ================================================
# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Sentry (optional error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Prometheus
PROMETHEUS_PORT=9090

# ================================================
# Email Configuration (optional)
# ================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@kova-ai.com
EMAIL_FROM_NAME=Kova AI System

# ================================================
# Admin Configuration
# ================================================
ADMIN_EMAIL=admin@example.com
ADMIN_USERNAME=admin
ADMIN_INITIAL_PASSWORD=change-this-password

# ================================================
# Feature Flags
# ================================================
ENABLE_AUTO_FIX=true
ENABLE_AI_COMMANDS=true
ENABLE_WEBHOOKS=true
ENABLE_MONITORING=true
ENABLE_RATE_LIMITING=true

# ================================================
# AI Model Configuration
# ================================================
# OpenAI
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Anthropic
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000

# ================================================
# Celery Configuration
# ================================================
CELERY_BROKER_URL=redis://:redis_secure_pass_2024@redis:6379/0
CELERY_RESULT_BACKEND=redis://:redis_secure_pass_2024@redis:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# ================================================
# Cache Configuration
# ================================================
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# ================================================
# File Storage
# ================================================
MAX_UPLOAD_SIZE_MB=100
ALLOWED_EXTENSIONS=.py,.js,.ts,.java,.go,.rs,.cpp,.c,.h,.hpp

# ================================================
# System Limits
# ================================================
MAX_ERRORS_PER_SCAN=1000
MAX_REPOSITORIES=100
MAX_CONCURRENT_FIXES=5
SCAN_INTERVAL_MINUTES=5