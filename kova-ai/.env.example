# Kova AI System Environment Configuration
# Copy this file to .env and configure the values for your environment

# Database Configuration
POSTGRES_DB=kova
POSTGRES_USER=kova
POSTGRES_PASSWORD=kova_pass

# Database Connection URLs
# Use 'localhost' when running locally; 'db' when using Docker Compose
DATABASE_URL=postgresql+asyncpg://kova:kova_pass@db:5432/kova

# API Keys (Required for full functionality)
# Get your API key from OpenAI Dashboard
OPENAI_API_KEY=sk-your-openai-api-key-here
# Get your API key from Anthropic Console  
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
# GitHub Personal Access Token for repository access
GITHUB_TOKEN=ghp_your-github-token-here
# Pinecone API key for vector database
PINECONE_API_KEY=your-pinecone-api-key-here

# Application Configuration
API_KEY=your_api_key_here
# Set to 'production' in production environments
ENVIRONMENT=development
# Application log level
LOG_LEVEL=INFO
